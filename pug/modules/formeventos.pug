.conteinerpageevent
    .conteinform
        button.collapsible 
          h3 Crear Evento
        .formevent
          form(action="").formflexe
            .formleft
              .formgroup
                .columf.w50
                  label(for="Nombre")
                    b Nombre
                  input(type="text", name="Nombre" id="evname" required)
                  label(for="Descripcion")
                    b Descripcion corta
                  textarea(name="Descipcion", id="descev" cols="10", rows="10")
                input(type="file" name="file" id="file" class="inputfile" data-multiple-caption="{count} files selected" multiple)
                label(for="file")
                  b(class="bimgtext") <i class="fas fa-cloud-upload-alt"></i> 
                    span Arrastra y tira las imagenes aca
              //- Mas adelante se implementara un mejor upload Files
              label(for="Desclarge")
                b Descripcion larga
              textarea(name="Desclarge", cols="10", rows="5")
            .formright
              .formgroup
                .columf.w45
                  label(for="Desde")
                    b Desde
                  input(id="desdedate" type="text" data-large-mode="true" data-theme="my-style" data-lang="es" data-max-year="2030" data-format="d-m-Y" name="desde" required)
                  label(for="desde")
                    b Nombre y apellido
                  input(type="text" name="Nombre" required)
                  label(for="desde")
                    b Direccion
                  input(type="text" name="desde" required)
                  label(for="desde")
                    b Pago
                  input(type="text" name="desde" required)
                  .checkcontain
                    span 
                      b Propio
                    label(id="labelch" class="switch")
                      input(type="checkbox" checked)
                      span.slider.round
                .columf.w45
                  label(for="Hasta")
                    b Hasta
                  input(id="hastadate" type="text" data-large-mode="true" data-theme="my-style" data-lang="es" data-max-year="2030" data-format="d-m-Y" name="Hasta" required)
                  label(for="desde")
                    b Mail
                  input(type="text" name="desde" required)
                  label(for="desde")
                    b Localidad
                  input(type="text" name="desde" required)
                  label(for="desde")
                    b Link
                  input(type="text" name="desde" required)
                  .checkcontain
                    span 
                      b Destacado
                    label(id="labelch" class="switch")
                      input(type="checkbox" checked)
                      span.slider.round
              button(id="btnsubmitevent" type="submit")
                span Subir <i class="fas fa-external-link-alt"></i>
    .conteinform
        button.collapsible 
          h3 Todos los Eventos
